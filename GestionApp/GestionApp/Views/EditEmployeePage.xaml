<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionApp.Views.EditEmployeePage" Title="Editar Empleado">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Image Source="logo.png" HeightRequest="100" />
            <Label Text="Editar Empleado" FontSize="24" HorizontalOptions="Center" />
            <Entry x:Name="UsernameEntry" Placeholder="Nombre de usuario" Keyboard="Text" />
            <Entry x:Name="CedulaEntry" Placeholder="Cedula" Keyboard="Numeric" />
            <Entry x:Name="EmailEntry" Placeholder="Correo" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Guardar" BackgroundColor="#D9F46A" TextColor="White" Clicked="OnSaveButtonClicked" FontSize="Small" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
